{
    "restartable": "rs",
    "ignore": [
      ".git",
      "node_modules/**/node_modules",
      "frontend"
    ],
    "verbose": true,
    "execMap": {
      "js": "node --harmony",
      "ts": "ts-node"
    },
    "events": {
      "restart": "cls || clear"
    },
    "watch": [
        "server"
      ],
    "env": {
      "NODE_ENV": "development"
    },
    "ext": "ts,js,json"
  }